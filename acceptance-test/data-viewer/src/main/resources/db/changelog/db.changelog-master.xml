<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="yourname">
        <createTable tableName="file_entity">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="path" type="VARCHAR(5000)">
                <constraints nullable="false"/>
            </column>
            <column name="datatype" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="developers" type="VARCHAR(255)"/>
            <column name="lead" type="VARCHAR(255)"/>
            <column name="confirmed_by" type="VARCHAR(255)"/>
            <column name="approved_by" type="VARCHAR(255)"/>
            <column name="confirmed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="approved" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <!-- New changeSet to add the deleted column -->
    <changeSet id="2" author="yourname">
        <addColumn tableName="file_entity">
            <column name="deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <!-- New changeSet to update path size -->
    <!-- <changeSet id="3" author="yourname">
        <modifyDataType tableName="file_entity" columnName="path" newDataType="VARCHAR(5000)"/>
    </changeSet> -->
</databaseChangeLog>
